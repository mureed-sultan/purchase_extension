<odoo>
  <data>

    <!-- Root: under Purchases -->
    <menuitem id="menu_purchase_request_root"
              name="Purchase Requests"
              parent="purchase.menu_purchase_root"
              sequence="15"/>

    <!-- Action: All Requests -->
    <record id="action_purchase_requests_all" model="ir.actions.act_window">
      <field name="name">All Requests</field>
      <field name="res_model">purchase.order</field>
      <field name="view_mode">list,form</field>
      <field name="context">{'default_receipt_reminder_email': True}</field>
    </record>

    <!-- Action: My Requests -->
    <record id="action_purchase_requests_my" model="ir.actions.act_window">
      <field name="name">My Requests</field>
      <field name="res_model">purchase.order</field>
      <field name="view_mode">list,form</field>
      <field name="domain">[('initiated_by','=',uid)]</field>
      <field name="context">{'default_receipt_reminder_email': True}</field>
    </record>

    <!-- Action: To Approve - Level 1 -->
    <record id="action_purchase_to_approve_l1" model="ir.actions.act_window">
      <field name="name">To Approve - Level 1</field>
      <field name="res_model">purchase.order</field>
      <field name="view_mode">list,form</field>
      <field name="domain">[('approval_state','=','waiting_l1')]</field>
    </record>

    <!-- Action: To Approve - Level 2 -->
    <record id="action_purchase_to_approve_l2" model="ir.actions.act_window">
      <field name="name">To Approve - Level 2</field>
      <field name="res_model">purchase.order</field>
      <field name="view_mode">list,form</field>
      <field name="domain">[('approval_state','=','waiting_l2')]</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_purchase_requests_all"
              name="All Requests"
              parent="menu_purchase_request_root"
              action="action_purchase_requests_all"
              sequence="1"/>

    <menuitem id="menu_purchase_requests_my"
              name="My Requests"
              parent="menu_purchase_request_root"
              action="action_purchase_requests_my"
              sequence="2"/>

    <menuitem id="menu_purchase_to_approve_l1"
              name="To Approve - Level 1"
              parent="menu_purchase_request_root"
              action="action_purchase_to_approve_l1"
              groups="purchase_extension.group_purchase_approver_l1"
              sequence="3"/>

    <menuitem id="menu_purchase_to_approve_l2"
              name="To Approve - Level 2"
              parent="menu_purchase_request_root"
              action="action_purchase_to_approve_l2"
              groups="purchase_extension.group_purchase_approver_l2"
              sequence="4"/>

  </data>
</odoo>
