<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_purchase_order_line_list_for_gm" model="ir.ui.view">
            <field name="name">purchase.order.line.gm.list</field>
            <field name="model">purchase.order.line</field>
            <field name="arch" type="xml">
                <list string="Requested Products">
                    <field name="product_id"/>
                    <field name="order_id"/>
                    <field name="branch_id"/>
                    <field name="product_qty"/>
                    <field name="gm_vendor_id" groups="purchase_extension.group_general_manager"/>
                    <field name="vendor_id_display" string="Vendor"/>

                </list>
            </field>
        </record>

        <record id="view_purchase_order_line_form_for_gm" model="ir.ui.view">
            <field name="name">purchase.order.line.gm.form</field>
            <field name="model">purchase.order.line</field>
            <field name="arch" type="xml">
                <form string="Product Request Detail">
                    <header>
                        <button name="action_gm_approve_from_line"
                                string="Approve GM"
                                type="object"
                                class="oe_highlight"
                                groups="purchase_extension.group_general_manager"/>
                    </header>

                    <sheet>
                        <group>
                            <field name="product_id" readonly="1"/>
                            <field name="branch_id" readonly="1"/>
                            <field name="order_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="product_qty" readonly="1"/>
                            <field name="gm_vendor_id"/>
                            <field name="vendor_id_display" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_gm_orders_product" model="ir.actions.act_window">
            <field name="name">GM Product Requests</field>
            <field name="res_model">purchase.order.line</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_purchase_order_line_list_for_gm"/>
            <field name="domain">[('order_id.approval_state','=', 'to_approve')]</field>
            <field name="context">{'group_by': 'product_id'}</field>
        </record>

    </data>
</odoo>
