<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_purchase_vendor_line_list" model="ir.ui.view">
      <field name="name">purchase.vendor.line.list</field>
      <field name="model">purchase.vendor.line</field>
      <field name="arch" type="xml">
        <list>
          <field name="order_id"/>
          <field name="product_id"/>
          <field name="vendor_id"/>
          <field name="quantity"/>
          <field name="branch_id"/>
        </list>
      </field>
    </record>

    <record id="view_purchase_vendor_line_form" model="ir.ui.view">
      <field name="name">purchase.vendor.line.form</field>
      <field name="model">purchase.vendor.line</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="order_id"/>
              <field name="product_id"/>
              <field name="vendor_id"/>
              <field name="quantity"/>
              <field name="branch_id" readonly="1"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>
